# General Settings
DEBUG=True
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1
PORT=5000

# API Settings
API_V1_STR=/api/v1
PROJECT_NAME="Social Media Upload API"

# Security
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CSRF_ENABLED=True

# OpenAI (ChatGPT)
OPENAI_API_KEY=your-openai-api-key

# YouTube API Credentials
YOUTUBE_CLIENT_ID=your-youtube-client-id
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret
YOUTUBE_PERSONAL_REFRESH_TOKEN=your-personal-refresh-token
YOUTUBE_CHARITY_REFRESH_TOKEN=your-charity-refresh-token

# Instagram API Credentials
INSTAGRAM_APP_ID=your-instagram-app-id
INSTAGRAM_APP_SECRET=your-instagram-app-secret
INSTAGRAM_PERSONAL_ACCESS_TOKEN=your-personal-access-token
INSTAGRAM_PERSONAL_USER_ID=your-personal-user-id
INSTAGRAM_CHARITY_ACCESS_TOKEN=your-charity-access-token
INSTAGRAM_CHARITY_USER_ID=your-charity-user-id

# TikTok API Credentials
TIKTOK_APP_KEY=your-tiktok-app-key
TIKTOK_APP_SECRET=your-tiktok-app-secret
TIKTOK_PERSONAL_ACCESS_TOKEN=your-personal-access-token
TIKTOK_CHARITY_ACCESS_TOKEN=your-charity-access-token

# Upload Settings
MAX_UPLOAD_SIZE=512MB
TEMP_UPLOAD_DIR=./uploads
ALLOWED_VIDEO_FORMATS=mp4,mov
DEFAULT_VIDEO_QUALITY=high

# Retry Settings
MAX_RETRIES=3
RETRY_DELAY=5

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Cache Settings
CACHE_TYPE=filesystem
CACHE_DIR=./cache
CACHE_DEFAULT_TIMEOUT=300
